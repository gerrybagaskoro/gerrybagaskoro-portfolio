---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.svelte";
import Experience from "../components/Experience.svelte";
import Projects from "../components/Projects.svelte";
import Skills from "../components/Skills.svelte";
import { getImage } from "astro:assets";
import profileImg from "../assets/profile.jpg";

const optimizedProfile = await getImage({ src: profileImg, format: "webp" });
---

<Layout title="Gerry Bagaskoro Putro - Portfolio">
  <Hero client:load profileImage={optimizedProfile.src} />
  <div class="my-6"></div>
  <Experience client:visible />
  <div class="my-6"></div>
  <Projects client:visible />
  <div class="my-6"></div>
  <Skills client:visible />
</Layout>

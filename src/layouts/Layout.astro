---
import { ModeWatcher } from "mode-watcher";
import { ViewTransitions } from "astro:transitions";
import Header from "../components/Header.svelte";
import Footer from "../components/Footer.svelte";
import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Gerry Bagaskoro Portfolio" } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth" style="background-color: #FAF8F3;">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Fira Sans Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Fira+Sans:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <title>{title}</title>
    <script is:inline>
      // Apply theme IMMEDIATELY before any rendering to prevent flash
      function applyTheme() {
        const theme = localStorage.getItem("mode-watcher-theme");
        const prefersDark = window.matchMedia(
          "(prefers-color-scheme: dark)",
        ).matches;

        if (theme === "dark" || (!theme && prefersDark)) {
          document.documentElement.classList.add("dark");
          // Keep dark background during navigation
          document.documentElement.style.backgroundColor = "#1A1816";
        } else {
          // If light mode, remove the dark background inline style
          document.documentElement.style.backgroundColor = "#FAF8F3";
          document.documentElement.classList.remove("dark");
        }
      }

      // Apply theme on initial load
      applyTheme();

      // Apply theme BEFORE Astro swaps content (prevents flash during navigation)
      document.addEventListener("astro:before-swap", (ev) => {
        // Apply theme to the new document before it's swapped in
        const theme = localStorage.getItem("mode-watcher-theme");
        const prefersDark = window.matchMedia(
          "(prefers-color-scheme: dark)",
        ).matches;

        if (theme === "dark" || (!theme && prefersDark)) {
          ev.newDocument.documentElement.classList.add("dark");
          ev.newDocument.documentElement.style.backgroundColor = "#1A1816";
        } else {
          ev.newDocument.documentElement.classList.remove("dark");
          ev.newDocument.documentElement.style.backgroundColor = "#FAF8F3";
        }
      });

      // Function to enable transitions
      function enableTransitions() {
        document.documentElement.classList.add("transitions-enabled");
      }

      // Enable transitions after initial load
      if (document.readyState === "loading") {
        window.addEventListener("load", enableTransitions);
      } else {
        // Document already loaded (happens on navigation with ViewTransitions)
        enableTransitions();
      }

      // Re-enable transitions after Astro view transitions
      document.addEventListener("astro:after-swap", enableTransitions);
    </script>
    <ViewTransitions />
  </head>
  <body
    class="antialiased"
    style="background-color: var(--bg-primary); color: var(--text-primary);"
  >
    <ModeWatcher client:only="svelte" disableTransitions={false} />
    <Header client:load />
    <main class="max-w-4xl mx-auto px-4 pt-24 pb-12">
      <slot />
    </main>
    <Footer />
  </body>
</html>

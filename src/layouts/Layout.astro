---
import { ModeWatcher } from "mode-watcher";
import { ViewTransitions } from "astro:transitions";
import Header from "../components/Header.svelte";
import Footer from "../components/Footer.svelte";
import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Gerry Bagaskoro Portfolio" } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Fira Sans Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Fira+Sans:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <title>{title}</title>
    <script is:inline>
      // Determine theme and set CSS variable IMMEDIATELY
      (function () {
        const theme = localStorage.getItem("mode-watcher-theme");
        const prefersDark = window.matchMedia(
          "(prefers-color-scheme: dark)",
        ).matches;
        const isDark = theme === "dark" || (!theme && prefersDark);

        // Set CSS custom property for initial background
        document.documentElement.style.setProperty(
          "--initial-bg",
          isDark ? "#1A1816" : "#FAF8F3",
        );

        if (isDark) {
          document.documentElement.classList.add("dark");
        }
      })();

      // Apply theme BEFORE Astro swaps content (prevents flash during navigation)
      document.addEventListener("astro:before-swap", (ev) => {
        const theme = localStorage.getItem("mode-watcher-theme");
        const prefersDark = window.matchMedia(
          "(prefers-color-scheme: dark)",
        ).matches;
        const isDark = theme === "dark" || (!theme && prefersDark);

        // Set CSS custom property on new document
        ev.newDocument.documentElement.style.setProperty(
          "--initial-bg",
          isDark ? "#1A1816" : "#FAF8F3",
        );

        if (isDark) {
          ev.newDocument.documentElement.classList.add("dark");
        } else {
          ev.newDocument.documentElement.classList.remove("dark");
        }
      });

      // Function to enable transitions
      function enableTransitions() {
        document.documentElement.classList.add("transitions-enabled");
      }

      // Enable transitions after initial load
      if (document.readyState === "loading") {
        window.addEventListener("load", enableTransitions);
      } else {
        enableTransitions();
      }

      // Re-enable transitions after Astro view transitions
      document.addEventListener("astro:after-swap", enableTransitions);
    </script>
    <ViewTransitions />
  </head>
  <body
    class="antialiased"
    style="background-color: var(--bg-primary); color: var(--text-primary);"
  >
    <ModeWatcher client:only="svelte" disableTransitions={false} />
    <Header client:load />
    <main class="max-w-4xl mx-auto px-4 pt-24 pb-12">
      <slot />
    </main>
    <Footer />
  </body>
</html>
